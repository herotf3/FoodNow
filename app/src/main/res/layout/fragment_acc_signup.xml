<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:text="Email:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="@dimen/text_login_size"
        android:textColor="#fff" />

    <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
        android:textColor="@color/edit_text_login"
        android:inputType="textEmailAddress"

        android:textCursorDrawable="@drawable/my_cursor_orange"
        android:scrollbarThumbHorizontal="@drawable/text_selected_myhandle"
        android:textSelectHandle="@drawable/text_selected_myhandle" />

    <TextView
        android:text="Mật khẩu:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="@dimen/text_login_size"
        android:textColor="#fff" />

    <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
        android:inputType="textPassword"
            android:textColor="@color/edit_text_login"
        android:textCursorDrawable="@drawable/my_cursor_orange"
        android:scrollbarThumbHorizontal="@drawable/text_selected_myhandle"
        android:textSelectHandle="@drawable/text_selected_myhandle" />

    <TextView
        android:text="Nhập lại mật khẩu:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="@dimen/text_login_size"
        android:textColor="@android:color/white" />

    <EditText
            android:id="@+id/login_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
        android:inputType="textPassword"
            android:textColor="@color/edit_text_login"
        android:textCursorDrawable="@drawable/my_cursor_orange"
        android:scrollbarThumbHorizontal="@drawable/text_selected_myhandle"
        android:textSelectHandle="@drawable/text_selected_myhandle" />

    <TextView
        android:text="Tên hiển thị:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="@dimen/text_login_size"
        android:textColor="@android:color/white" />

    <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/edit_text_login"
            android:inputType="textPersonName"
            android:textColorHint="@color/color_hint"
            android:textCursorDrawable="@drawable/my_cursor_orange"
            android:scrollbarThumbHorizontal="@drawable/text_selected_myhandle"
            android:textSelectHandle="@drawable/text_selected_myhandle" />

    <Button
        android:id="@+id/register_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="#ffffff"
        android:layout_below="@+id/ll_register"
        android:layout_marginTop="50dp"
        android:background="@drawable/hcn_blue"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

</LinearLayout>