<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_store"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_catalog_padding_top"
        android:paddingTop="@dimen/item_catalog_padding_top">


        <TextView
            android:id="@+id/txt_mark"
            android:layout_width="@dimen/mark_size"
            android:layout_height="@dimen/mark_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_left_mark"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:text="7.7"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_mark_size"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_left_mark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quán chay phúc ấn an gia"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="163/21/3 Tô Hiến Thành, Quận 10, TP.HCM"
                    android:textSize="@dimen/text_size_address" />

                <TextView
                    android:id="@+id/txt_distance" android:layout_marginRight="@dimen/padding_top_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_address" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_store"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_store_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_top_store"
        android:paddingLeft="@dimen/padding_left_mark"
        android:paddingTop="@dimen/padding_top_store">

        <ImageView
            android:layout_width="@dimen/size_icon_message"
            android:layout_height="@dimen/size_icon_message"
            android:layout_marginRight="@dimen/padding_top_store"
            app:srcCompat="@drawable/icon_views" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="256"
            android:textSize="@dimen/text_size_address"
            android:id="@+id/tv_views_num" />

        <ImageView
            android:layout_width="@dimen/size_icon_message"
            android:layout_height="@dimen/size_icon_message"
            android:layout_marginLeft="@dimen/item_catalog_width"
            android:layout_marginRight="@dimen/padding_top_store"
            app:srcCompat="@drawable/icon_cmt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="928"
            android:textSize="@dimen/text_size_address"
            android:id="@+id/tv_cmt_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_top_store"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/openning"
            android:textSize="@dimen/text_size_address" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:srcCompat="@drawable/circle_bg"
            android:id="@+id/icon_stt" />

    </LinearLayout>

</LinearLayout>