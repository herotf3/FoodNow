<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_hint</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_text_orange</item>
        <item name="android:statusBarColor">@color/status_bar</item>

    </style>

    <style name="MyLoginEditext">
        <item name="android:colorControlNormal">#d2c5bd</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlHighlight">#eba74000</item>
    </style>

    <style name="myTheme" parent="AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CollapsAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
